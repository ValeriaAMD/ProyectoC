<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center" style="background-color: rgba(184, 166, 166, 0.308);">
                <div class="card-header">
                    <h3 class="text-uppercase" style="color: rgb(165, 162, 162);">Editando una clase</h3>
                </div>
                <div class="card-body">
                    <form action="/editClas/{{clase.id_clase}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Nombre</label>
                        <input class="form-control" type="text" value="{{clase.nombre}}" name="nombre" id="nombre" placeholder="Babys"
                        style="background-color: rgba(255, 255, 255, 0.308);" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="description" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Descripcion </label>
                        <input class="form-control" type="text" value="{{clase.descripcion}}" name="descripcion" id="descripcion" placeholder="niños de 5 a 10 años"
                        style="background-color: rgba(255, 255, 255, 0.308);" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">fecha_nac</label>
                        <input class="form-control" type="text" value="{{clase.fecha_hora}}"  type="text" name="fecha_hora" id="fecha_hora" placeholder="Lunes 6:00"
                        style="background-color: rgba(255, 255, 255, 0.308);" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn" style="background-color: blueviolet;"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>