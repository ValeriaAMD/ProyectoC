<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center" style="background-color: rgba(184, 166, 166, 0.308);">
                <div class="card-header">
                    <h3 class="text-uppercase" style="color: rgb(165, 162, 162);">EDITANDO UN PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/editProduct/{{producto.id_producto}}" method="post">
                   <div class="input-group mt-2">
                        <label for="name" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Nombre</label>
                        <input class="form-control" type="text" value="{{producto.nombre}}" name="nombre" id="nombre" placeholder=" Guantes" 
                        style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Descripcion</label>
                        <input class="form-control" type="text" value="{{producto.descripcion}}" name="descripcion" id="descripcion" placeholder="rojo 12 oz" style="background-color: rgba(255, 255, 255, 0.308);">
                    </div>
                    <div class="input-group mt-2">
                        <label for="email" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Precio</label>
                        <input class="form-control" type="text" value="{{producto.precio}}" name="precio" id="Precio" placeholder="250" 
                        style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="phone" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Disponibles</label>
                        <input class="form-control" type="number" value="{{producto.stock}}" name="stock" id="descripcion" placeholder="2" 
                        style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                  
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn" style="background-color: blueviolet;"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>