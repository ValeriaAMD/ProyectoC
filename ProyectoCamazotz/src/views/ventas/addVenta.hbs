<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center" style="background-color: rgba(184, 166, 166, 0.308);">
                <div class="card-header">
                    <h3 class="text-uppercase" style="color: rgb(165, 162, 162);">NUEVA VENTA</h3>
                </div>
                <div class="card-body">
                    <form action="/addVenta" method="post">
                    <div class="input-group mt-2">
                        <label for="descript" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Producto</label>
                        <input class="form-control" type="text" name="product_descrip" id="product_descrip" placeholder="vendas"
                        style="background-color: rgba(255, 255, 255, 0.308);" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Cantidad de productos</label>
                        <input class="form-control" type="number" name="cantidad" id="cantidad" placeholder="0" style="background-color: rgba(255, 255, 255, 0.308);"autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="date" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Fecha</label>
                        <input class="form-control" type="text" name="fecha_venta" id="fecha_venta" placeholder="2024-07-10" 
                        style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="idpro" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">ID del producto</label>
                        <input class="form-control" type="number" name="id_producto" id="descripcion" placeholder="0" style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="idal" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">ID del alumno</label>
                        <input class="form-control" type="number" name="id_alumno" id="descripcion" placeholder="0" style="background-color: rgba(255, 255, 255, 0.308);"required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="total" class="input-group-text"
                        style="background-color: rgba(255, 255, 255, 0.308);">Total</label>
                        <input class="form-control" type="number" name="total" id="total" placeholder="$" 
                        style="background-color: rgba(255, 255, 255, 0.308);"required>
                        
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn" style="background-color: blueviolet;">Venta</button>
                    </div>
                    </form>
                </div>
                {{#if message}}
    <div class="alert alert-warning text-center">
        {{message}}
    </div>
{{/if}}
            </div>
        </div>
    </div>
</div>